 {% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}{% endblock %}

{% block body %}

<div class="media">
  <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
  <div class="media-body">
    <h1 class="mt-0">{{ program.title }}</h1>
    <p>{{ program.summary }}</p>
    <p>Catégorie : {{ program.category.name }}</p>

    <p><b>LISTE COMPLETE DES SAISONS DE CETTE SERIE</b>
        <a href= "/saison">Ajouter/Modifier/Supprimer une saison</a></p>

    {% for saison in saisons %}
        <div>

          <p>
             <a href="/programs/{{program.id}}/seasons/{{ saison.number }}">
           saison: {{ saison.number }} année: {{ saison.year }}
           </a>
           </p>
           
        </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}

<strong>Acteurs :</strong>
<ul>
    {% for actor in program.actors %}
        <li><a href= "/actor/{{ actor.id }}">{{ actor.name }}</a></li>
    {% else %}
        <li>Aucun acteur pour cette série</li>
    {% endfor %}
</ul>
  </div>
</div>

{% endblock %}
